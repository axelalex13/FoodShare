<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myGrey">
    <android.support.design.widget.TextInputLayout

        android:id="@+id/emailWrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="86dp"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/passwordWrapper"
        android:layout_alignStart="@+id/passwordWrapper">

        <EditText
            android:id="@+id/email_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="112dp"
            android:ems="10"
            android:hint="Email"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:inputType="textEmailAddress" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/passwordWrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:layout_below="@+id/emailWrapper"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/password_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:ems="10"
            android:textColor="@color/black"
            android:hint="Password"
            android:inputType="textPassword"
            android:textSize="17sp" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/login2"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:background="@color/myGreen"
        android:text="LOG IN"
        android:textColorLink="#26ae61"
        android:textSize="17sp"
        android:layout_below="@+id/passwordWrapper"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Welcome to FoodShare! "
        android:textSize="24sp"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/goToRegister"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="38dp"
        android:background="@color/myGreen"
        android:text="Register"
        android:textColorLink="#26ae61"
        android:textSize="17sp"
        android:layout_below="@+id/login2"
        android:layout_alignStart="@+id/login2"
        android:layout_alignLeft="@+id/login2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="or" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="You can log in" />


</RelativeLayout>
